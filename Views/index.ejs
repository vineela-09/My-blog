<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Blog</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <div class="container">
        <h1>My Blog</h1>
        <a class="btn primary" href="/new">+ Create New Post</a>

        <div class="posts">
            <% posts.forEach(post=> { %>
                <div class="post">
                    <h2>
                        <%= post.title %>
                    </h2>
                    <p>
                        <%= post.content %>
                    </p>
                    <a class="btn edit" href="/edit/<%= post.id %>">Edit</a>
                    <form action="/delete/<%= post.id %>" method="POST">
                        <button class="btn delete" type="submit">Delete</button>
                    </form>
                </div>
                <% }); %>
        </div>
    </div>
</body>

</html>